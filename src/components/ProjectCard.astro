---
import { Image } from "astro:assets";

import { cn } from "../utils";

export interface Props {
  title: string;
  image: ImageMetadata;
  alt: string;
  layoutReverse?: boolean;
}

const props = Astro.props;
---

<div
  class={cn(
    "flex max-w-md flex-col-reverse items-center gap-6 self-center md:max-w-none md:flex-row",
    props.layoutReverse && "md:flex-row-reverse",
  )}
>
  <div class="animate-fade-up md:w-1/2 lg:w-7/12">
    <article class="text-lg font-light max-lg:text-base">
      <h1 class="text-2xl font-medium max-lg:text-xl">
        {props.title}
      </h1>
      <p><slot /></p>
    </article>
  </div>
  <Image
    src={props.image}
    alt={props.alt}
    class={cn(
      "rounded-xl border border-slate-500 h-fit md:w-1/2 lg:w-5/12",
      props.layoutReverse ? "animate-fade-right" : "animate-fade-left",
    )}
  />
</div>
